generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model User {
  id        String    @id @default(uuid())
  clerkId   String    @unique
  email     String?   @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  projects  Project[]
}

model Project {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  name        String
  websiteUrl  String
  publicKey   String   @unique // used by widget script
  pineconeNamespace String @unique // namespace in Pinecone for this project
  status      ProjectStatus @default(CREATING)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  crawls      Crawl[]
  analyticsSessions AnalyticsSession[]
  analyticsEvents   AnalyticsEvent[]
}

model Crawl {
  id          String   @id @default(uuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])

  status      CrawlStatus @default(PENDING)
  pagesCount  Int?
  error       String?
  startedAt   DateTime?
  finishedAt  DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AnalyticsSession {
  id          String   @id @default(uuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])

  sessionId   String   @unique
  userAgent   String?
  referrer    String?
  landingPath String?
  lastSeenAt  DateTime @default(now())
  startedAt   DateTime @default(now())

  events      AnalyticsEvent[]

  @@index([projectId, lastSeenAt])
}

model AnalyticsEvent {
  id          String   @id @default(uuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])

  sessionId   String
  session     AnalyticsSession @relation(fields: [sessionId], references: [sessionId])

  eventType   AnalyticsEventType
  path        String?
  elementTag  String?
  elementText String?
  loadTimeMs  Int?
  metadata    Json?
  createdAt   DateTime @default(now())

  @@index([projectId, eventType, createdAt])
  @@index([sessionId, createdAt])
}

enum AnalyticsEventType {
  PAGEVIEW
  CLICK
  SESSION_START
}

enum ProjectStatus {
  CREATING
  READY
  FAILED
}

enum CrawlStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
