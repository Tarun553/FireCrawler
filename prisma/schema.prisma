generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model User {
  id        String    @id @default(uuid())
  clerkId   String    @unique
  email     String?   @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  projects  Project[]
}

model Project {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  name        String
  websiteUrl  String
  publicKey   String   @unique // used by widget script
  pineconeNamespace String @unique // namespace in Pinecone for this project
  status      ProjectStatus @default(CREATING)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  crawls      Crawl[]
}

model Crawl {
  id          String   @id @default(uuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])

  status      CrawlStatus @default(PENDING)
  pagesCount  Int?
  error       String?
  startedAt   DateTime?
  finishedAt  DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum ProjectStatus {
  CREATING
  READY
  FAILED
}

enum CrawlStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}